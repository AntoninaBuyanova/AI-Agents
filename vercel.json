{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { 
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "^/favicon.svg", "dest": "/icon.png" },
    { "src": "^/favicon-16x16.png", "dest": "/icon.png" },
    { "src": "^/favicon-32x32.png", "dest": "/icon.png" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 